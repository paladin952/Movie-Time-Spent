<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_4">

        <include
            android:id="@+id/app_bar_layout"
            layout="@layout/layout_toolbar" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/autocomplete_list"
            android:layout_marginRight="@dimen/BU_2"
            android:layout_marginLeft="@dimen/BU_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_bar_layout"
            android:layout_marginTop="2dp"
            android:clickable="true"
            android:scrollbars="vertical" />

        <LinearLayout
            android:id="@+id/time_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_bar_layout"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/BU_2"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/days"
                    style="@style/WhiteBoldTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:textSize="@dimen/BU_1.5"
                    android:typeface="serif" />

                <TextView
                    style="@style/WhiteBoldTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Days"
                    android:textSize="@dimen/BU_1.5"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hours"
                    style="@style/WhiteBoldTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:textSize="@dimen/BU_1.5"
                    android:typeface="serif" />

                <TextView
                    style="@style/WhiteBoldTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Hours"
                    android:textSize="@dimen/BU_1.5"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/BU_2"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/minutes"
                    style="@style/WhiteBoldTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="0"
                    android:textSize="@dimen/BU_1.5"
                    android:typeface="serif" />

                <TextView
                    style="@style/WhiteBoldTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Minutes"
                    android:textSize="@dimen/BU_1.5"
                    android:typeface="serif" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/add_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_container">

            <EditText
                android:id="@+id/seasons_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/BU_1"
                android:layout_marginRight="@dimen/BU_1"
                android:layout_marginTop="@dimen/BU_0.9"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/hint_seasons_standard"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLines="1"
                android:textColor="@color/dark_petrol"
                android:textColorHint="@color/dark_petrol"
                android:typeface="serif" />

            <Button
                android:id="@+id/add_button"
                style="@style/ButtonAdd"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/BU_1_2"
                android:text="Add" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/add_container"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/movies_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:clickable="true"
                android:scrollbars="vertical" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                ads:adSize="BANNER"
                ads:adUnitId="@string/admob_main_banner_ca" />

        </LinearLayout>
    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
